# Dockerfile.seedlink
FROM python:3.12-slim

# Optional: install certificates + minimal system deps
RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy your script(s)
COPY ./configs/seedlink/scripts /app

# Install dependencies once at build time
RUN pip install --no-cache-dir requests urllib3

# Default command
CMD ["sleep", "infinity"]
